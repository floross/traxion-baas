{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@traxion/casl": ["libs/common/casl/src/index.ts"],
      "@traxion/nestjs-authorized-services": [
        "libs/nestjs/authorized-services/src/index.ts"
      ],
      "@traxion/nestjs-graphql-dtos": ["libs/nestjs/graphql-dtos/src/index.ts"],
      "@traxion/nestjs-resolvers": ["libs/nestjs/resolvers/src/index.ts"],
      "@traxion/nestjs-services": ["libs/nestjs/services/src/index.ts"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": ["node_modules", "tmp", "**/files/**"]
}
