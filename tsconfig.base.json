{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@traxion/casl": ["libs/common/casl/src/index.ts"],
      "@traxion/nestjs-services": ["libs/nestjs/services/src/index.ts"],
      "@traxionapi-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@traxioncreate-traxion-workspace": [
        "libs/hapify/create-traxion-workspace/src/index.ts"
      ],
      "@traxionnestjs/authorized-services": [
        "libs/nestjs/authorized-services/src/index.ts"
      ],
      "@traxionnestjs/graphql-dtos": ["libs/nestjs/graphql-dtos/src/index.ts"],
      "@traxionnestjs/resolvers": ["libs/nestjs/resolvers/src/index.ts"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": ["node_modules", "tmp", "**/files/**"]
}
